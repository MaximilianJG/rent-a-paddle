<div class="container-show">
  <div class="row">
    <div class="col-lg-5">
      <div class="card-boat-show">
        <% if @boat.photos.attached? %>
          <% @boat.photos.each do |photo| %>
            <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
        <% end %>
        <% else %>
          <%= cl_image_tag 'download-2_buhn0o', height: 300, width: 400, crop: :fill, class: "card-image" %>
        <% end %>

        <div class="card-boat-infos-show">
          <div class="card-boat-name-description">
            <h2><%= @boat.name %></h2>
            <p><%= @boat.description %></p>
          </div>
          <div class="card-boat-price-avatar">
            <p><%= @boat.price %>â‚¬/day</p>
            <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-boat-user avatar-bordered" />
          </div>
        </div>
      </div>
        <div class="mt-5 mb-5 booking-form">
    <%= simple_form_for [@boat, @booking] do |f|%>
    <div>
      <%= f.input :starting_date_time %>
    </div>
    <div>
      <%= f.input :ending_date_time %>
    </div>
    <div>
      <%= f.submit "Book now", class: "btn-mint" %>
    </div>
    <% end %>
  </div>
    </div>
      <div class="col-lg-7">
        <div class="margin-card-show">
          <div id="map"
             style="width: 100%; height: 640px;"
             data-markers="<%= @markers.to_json %>"
             data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
        </div>
      </div>
  </div>







</div>



