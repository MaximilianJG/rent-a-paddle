

<div class="container mt-5">
  <div class="row justify-content-center">
    <h1>Create a new booking</h1>
    <div class="col-sm-8">
      <%= simple_form_for [@boat, @booking] do |f|%>
      <%= f.input :starting_date_time %>
      <%= f.input :ending_date_time %>
      <%= f.submit "Book this", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>

